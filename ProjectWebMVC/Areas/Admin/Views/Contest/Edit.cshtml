@model ProjectLibrary.ObjectBussiness.Contest

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<h4>Contest</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		@using (Html.BeginForm("Edit", "Contest", FormMethod.Post))
		{
			@Html.HiddenFor(model=>model.ContestId)
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				@Html.EditorFor(model=>model.ContestName,new {htmlAttributes= new{@class="form-control"} })
				<span asp-validation-for="ContestName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label> 
				@Html.EditorFor(model=>model.Description,new {htmlAttributes= new{@class="form-control"} })
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="StartTime" class="control-label"></label>
				@Html.EditorFor(model=>model.StartTime,new {htmlAttributes= new{@class="form-control"} }) <span asp-validation-for="StartTime" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="EndTime" class="control-label"></label>
				@Html.EditorFor(model=>model.EndTime,new {htmlAttributes= new{@class="form-control"} })
				<span asp-validation-for="EndTime" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="OwnerUserId" class="control-label"></label>
				@Html.EditorFor(model=>model.OwnerUserId,new {htmlAttributes= new{@class="form-control"} }) <span asp-validation-for="OwnerUserId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		}
	</div>
</div>
<div> @Html.ActionLink("Back to List","Index","Contest",null, new {@class="btn btn-danger"}) </div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}