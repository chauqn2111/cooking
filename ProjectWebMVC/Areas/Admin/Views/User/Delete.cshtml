@model ProjectLibrary.ObjectBussiness.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delete User</h1>

<div class="container">
    <h3 class="text-center">Are you sure you want to delete this user?</h3>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "needs-validation", novalidate = "true", id = "deleteForm" }))
            {
                @Html.HiddenFor(model => model.UserId)

                <dl class="row border rounded p-3 mb-3 bg-light">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.RoleId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.RoleId)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Status)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.UserType)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.UserType)
                    </dd>
                </dl>

                <div class="text-center">
                    <div class="form-group d-inline-block mr-2">
                        <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
                    </div>
                    <div class="form-group d-inline-block">
                        @Html.ActionLink("Back to User List", "Index", "User", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete this user?")) {
                document.getElementById("deleteForm").submit();
            }
        }
    </script>
}
