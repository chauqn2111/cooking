@model ProjectLibrary.ObjectBussiness.Tag

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Create Tag</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 ">
            @using (Html.BeginForm("Create", "Tag", FormMethod.Post))
            {
                <div class="row border rounded p-3 mb-3 bg-light">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="TagName" class="control-label">TagName</label>
                        @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Tag name" } })
                        <span asp-validation-for="TagName" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <div class="form-group d-inline-block mr-2">
                        <input type="submit" value="Create" class="btn btn-primary" />|
                    </div>

                    <div class="form-group d-inline-block">
                        @Html.ActionLink("Back to List", "Index", "Tag", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

