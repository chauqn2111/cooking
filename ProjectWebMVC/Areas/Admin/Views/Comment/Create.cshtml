@model ProjectLibrary.ObjectBussiness.Comment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .custom-textarea {
        height: 150px; /* Điều chỉnh chiều cao theo mong muốn */
        resize: vertical; /* Cho phép người dùng điều chỉnh chiều cao */
    }
</style>

<h1 class="text-center">Create Comment</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 ">
            @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
            {
                <div class="row border rounded p-3 mb-3 bg-light">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="RecipeId" class="control-label">RecipeId</label>
                        @Html.EditorFor(model => model.RecipeId, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter RecipeId" } })
                        <span asp-validation-for="RecipeId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CommentText" class="control-label">CommentText</label>
                        @Html.TextAreaFor(model => model.CommentText, new { @class = "form-control custom-textarea", placeholder = "Enter description" })
                        <span asp-validation-for="CommentText" class="text-danger"></span>
                    </div>

                </div>

                <div class="text-center">
                    <div class="form-group d-inline-block mr-2">
                        <input type="submit" value="Create" class="btn btn-primary" />|
                    </div>

                    <div class="form-group d-inline-block">
                        @Html.ActionLink("Back to List", "Index", "Comment", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
