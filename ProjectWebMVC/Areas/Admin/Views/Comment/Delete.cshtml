@model ProjectLibrary.ObjectBussiness.Comment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delete Comment</h1>

<div class="container">
    <h3 class="text-center">Are you sure you want to delete this comment?</h3>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm("Delete", "Comment", FormMethod.Post, new { @class = "needs-validation", novalidate = "true", id = "deleteCommentForm" }))
            {
                @Html.HiddenFor(model => model.CommentId)

                <dl class="row border rounded p-3 mb-3 bg-light">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CommentId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CommentId)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.UserId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.UserId)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.RecipeId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.RecipeId)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CommentText)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CommentText)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>
                </dl>

                <div class="text-center">
                    <div class="form-group d-inline-block mr-2">
                        <button type="button" class="btn btn-danger" onclick="confirmDeleteComment()">Delete</button>
                    </div>
                    <div class="form-group d-inline-block">
                        @Html.ActionLink("Back to Comment List", "Index", "Comment", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDeleteComment() {
            if (confirm("Are you sure you want to delete this comment?")) {
                document.getElementById("deleteCommentForm").submit();
            }
        }
    </script>
}
