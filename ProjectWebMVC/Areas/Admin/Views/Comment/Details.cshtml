@model ProjectLibrary.ObjectBussiness.Comment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Comment Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border rounded p-3 mb-3 bg-light">
                <h4>Comment Information</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CommentId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CommentId)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.UserId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.UserId)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.RecipeId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.RecipeId)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CommentText)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CommentText)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>
                </dl>
            </div>

            <div class="text-center">
                @Html.ActionLink("Edit", "Edit", new { id = Model.CommentId, commentId = Model.CommentId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Back to List", "Index", "Comment", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
