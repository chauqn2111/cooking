@model ProjectLibrary.ObjectBussiness.Recipe

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delete Recipe</h1>

<div class="container">
    <h3 class="text-center">Are you sure you want to delete this recipe?</h3>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm("Delete", "Recipe", FormMethod.Post, new { @class = "needs-validation", novalidate = "true", id = "deleteForm" }))
            {
                @Html.HiddenFor(model => model.RecipeId)

                <dl class="row border rounded p-3 mb-3 bg-light">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.RecipeId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.RecipeId)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.RecipeTitle)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.RecipeTitle)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ReadFree)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ReadFree)
                    </dd>
                </dl>

                <div class="text-center">
                    <div class="form-group d-inline-block mr-2">
                        <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
                    </div>
                    <div class="form-group d-inline-block">
                        @Html.ActionLink("Back to Recipe List", "Index", "Recipe", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete this recipe?")) {
                document.getElementById("deleteForm").submit();
            }
        }
    </script>
}
